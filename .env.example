# Server Configuration
PORT=5000
NODE_ENV=development

# Database - IMPORTANT: Update with your MongoDB Atlas connection string
# Get free MongoDB Atlas: https://www.mongodb.com/cloud/atlas/register
# After creating cluster: Connect > Connect your application > Copy connection string
MONGODB_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/edutrack?retryWrites=true&w=majority

# Or use local MongoDB (requires installation):
# MONGODB_URI=mongodb://localhost:27017/edutrack
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/edutrack

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# File Upload
MAX_FILE_SIZE=10485760
# 10MB in bytes

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
